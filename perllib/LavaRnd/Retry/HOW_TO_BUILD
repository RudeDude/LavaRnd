    # setup
    cd /home/LavaRnd/src/perllib
    h2xs -cn LavaRnd::Retry
    cd /home/LavaRnd/src/perllib/LavaRnd/Retry
    perl Makefile.PL LIBS='-llava_retry' INC='-I/home/LavaRnd/src/lib'

    # now write the code
    vi Retry.pm Retry.xs t/1.t

    # test
    make; make test

    # install
    make install

